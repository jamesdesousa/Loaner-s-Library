<h1>Log in or Create Account</h1>

<%= render '/shared/messages' %>

<%= form_tag "/handle_login" do %>
    <p>
        <%= label_tag :username %>
        <%= text_field_tag :username %>
    </p>
    <p>
        <%= label_tag :password %>
        <%= password_field_tag :password %>
    </p>
    <p>
        <%= submit_tag "Login" %>
    </p>
<% end %>

<%= link_to "Create Account", new_user_path %>