<h1>New Account Page</h1>

<%= render '/shared/messages' %>

<%= form_for @user do |f| %>
    <p>
        <%= f.label :username%>
        <%= f.text_field :username %>
    </p>
    <p>
        <%= f.label :name %>
        <%= f.text_field :name%>
    </p>
    <p>
        <%= f.label :password %>
        <%= f.password_field :password %>
    </p>
    <p>
        <%= f.label :password_confirmation %>
        <%= f.password_field :password_confirmation %>
    </p>
    <p>
        <%= f.submit "Create Account" %>
    </p>
<% end %>