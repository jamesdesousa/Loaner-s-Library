<h1> Add to wishlist </h1>

<%= form_for @wishlist_item do |f| %>
<p>
  <%= f.label :name %>
  <%= f.text_field :name %>
</p>
<p>
  <%= f.label :description %>
</p>
<p>
  <%= f.text_area :description, "width" => 80, "rows" => 20 %>
</p>
<p>
  <%= f.label :image, "Image URL" %>
</p>
<p>
  <%= f.text_area :image %>
</p>
<p>
  <%= f.submit "Add to wishlist" %>
</p>
<% end %>
